@model BlogPageViewModel
@{
    ViewData["Title"] = "Min Blog";
}
<link rel="stylesheet" href="~/css/Index.css" />

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Blogindlæg i @Model.BlogPosts.First().Blog?.Title</h1>

        <form asp-action="CreatePost" method="get">
            <button type="submit" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-pencil-square me-2"></i>Opret Blogindlæg
            </button>
        </form>
    </div>

    @foreach (var post in Model.BlogPosts)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h3 class="card-title text-primary">@post.Title</h3>
                <h6 class="card-subtitle mb-2 text-muted">af @post.Author?.Name</h6>
                <p class="text-muted small">Oprettet d. @post.Created.ToString("dd-MM-yyyy HH:mm")</p>
                <p class="card-text">@post.Content</p>
                <div class="mt-3">
                    <span class="badge bg-info text-dark">Dagens Rating: <strong>@post.OneToTen</strong>/10</span>
                </div>
            </div>
        </div>
    }
</div>