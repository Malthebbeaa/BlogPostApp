@model BlogPageViewModel

@{
    ViewData["Title"] = "Create Post";
}

<link rel="stylesheet" href="css/CreatePost.css"/>
<script src="js/CreatePost.js"></script>

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-center text-primary">Opret nyt blogindlæg</h2>

        <form asp-action="AddPost" method="post">
            <div class="mb-3">
                <label asp-for="NewBlogPost.Title" class="form-label">Titel</label>
                <input type="text" asp-for="NewBlogPost.Title" class="form-control" placeholder="Indtast titel" />
            </div>

            <div class="mb-3">
                <label asp-for="NewBlogPost.BlogId" class="form-label">Vælg Blog</label>
                <select asp-for="NewBlogPost.BlogId" class="form-select" asp-items="Model.Blogs"></select>
            </div>

            <div class="mb-3">
                <label asp-for="NewBlogPost.Content" class="form-label">Indhold</label>
                <textarea asp-for="NewBlogPost.Content" class="form-control" rows="5" placeholder="Skriv et nyt blogindlæg..." required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Dagens 1-10</label>
                <div id="rating" class="d-flex gap-2 flex-wrap">
                    @for (var i = 1; i <= 10; i++)
                    {
                        <div class="rating-box"
                             data-value="@i"
                             onclick="selectRating(@i)">
                            @i
                        </div>
                    }
                </div>
                <input type="hidden" id="ratingInput" asp-for="NewBlogPost.OneToTen" />
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary px-4">Tilføj</button>
            </div>
        </form>
    </div>
</div>