@model BlogOverviewModel

@{
    ViewData["Title"] = "Blogs";
}

<h1>Blogs på denne side</h1>
<form asp-action="CreateBlog" method="get">
    <button type="submit" class="btn btn-outline-primary btn-lg">
        <i class="bi bi-pencil-square me-2"></i>Opret Blogindlæg
    </button>
</form>

@foreach (var blog in Model.Blogs)
{
    <div>
        <h3><a asp-action="Index">@blog.Title</a></h3>
        <p>af @blog.Author?.Name</p>
    </div>
}


